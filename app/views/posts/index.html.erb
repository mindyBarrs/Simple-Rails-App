<h1>Latest Blog Posts</h1>

<div class="card-columns">
    <% @post.each do |post| %>
        <div class="card mt-4">
            <div class="card-header">
                <h4> <%= post.title %> </h4>
            </div>

            <div class="card-body">
                <p>
                    <%= post.body %>
                </p>

                <div class="">
                    <%= link_to 'Read More', post_path(post), { :class=>"btn btn-post" }%>
                </div>
            </div>
        </div>
    <% end %>
</div>
